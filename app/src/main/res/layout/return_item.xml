<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffe8"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4sp"
    android:id="@+id/abc"
    android:clickable="true">

    <ImageView
        android:id="@+id/return_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_book_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/return_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/return_image"
        app:layout_constraintTop_toTopOf="@+id/return_image" />

    <TextView
        android:id="@+id/return_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Author"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/return_image"
        app:layout_constraintTop_toBottomOf="@+id/return_name" />
    <TextView
        android:id="@+id/return_issue_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Date of Issue:"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/return_image"
        app:layout_constraintTop_toBottomOf="@+id/return_author" />
    <TextView
        android:id="@+id/return_issue_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Date of Issue"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/return_issue_label"
        app:layout_constraintTop_toBottomOf="@+id/return_author" />
    <TextView
        android:id="@+id/return_return_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Return Date:  "
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/return_image"
        app:layout_constraintTop_toBottomOf="@+id/return_issue_label" />
    <TextView
        android:id="@+id/return_return_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Return Date"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/return_return_label"
        app:layout_constraintTop_toBottomOf="@+id/return_issue_date" />
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/return_return_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorYellow"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


